<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/glowny_motyw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tekst1"
            android:textColor="@color/kolor_czcionki_1"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="numberDecimal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/klucz"
            android:textColor="@color/cardview_dark_background"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tekst2"
            android:textColor="@color/kolor_czcionki_1"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white"
            android:inputType="text"
            android:singleLine="false"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/tekst_do_szyfrowania"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zaszyfruj"
            android:layout_gravity="center"
            android:id="@+id/szyfruj"
            android:backgroundTint="@color/kolor_przycisku"
            android:textColor="@color/cardview_dark_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tekst3"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/kolor_czcionki_1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/zaszyfrowane_okno"
            android:textColor="@color/kolor_czcionki_2"
            android:padding="20dp"
            android:id="@+id/zaszyfrowany"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zapisz szyfr w pliku"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/zapisz"
            android:backgroundTint="@color/kolor_przycisku"
            android:textColor="@color/cardview_dark_background" />

    </LinearLayout>

</LinearLayout>