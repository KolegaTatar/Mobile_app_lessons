<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tresc_notatki"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/tekst_podpowiedzi"
            android:inputType="text"
            android:padding="8dp" />
        <Button
            android:id="@+id/przycisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/przycisk_tresc"
            android:textColor="@color/white"
            android:backgroundTint="@color/kolor_przycisku"
            app:cornerRadius="3dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lista_notatek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/kolor_separatora"
        android:dividerHeight="1dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
