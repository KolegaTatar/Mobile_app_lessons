<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_beige"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/main"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_brown"
        android:gravity="start"
        android:padding="12dp"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btnRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/button_chocolate"
        android:padding="12dp"
        android:text="@string/btn_roll"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        app:cornerRadius="10dp"/>

    <LinearLayout
        android:id="@+id/rowDice"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/row_white"
        android:padding="8dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/dice1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:contentDescription="kostka1"
            android:layout_margin="9dp"/>


        <ImageView
            android:id="@+id/dice2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:contentDescription="kostka2"
            android:layout_margin="9dp"/>


        <ImageView
            android:id="@+id/dice3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:contentDescription="kostka3"
            android:layout_margin="9dp"/>


        <ImageView
            android:id="@+id/dice4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:contentDescription="kostka4"
            android:layout_margin="9dp"/>


        <ImageView
            android:id="@+id/dice5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/question"
            android:contentDescription="kostka5"
            android:layout_margin="9dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLastRoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_last_roll"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvTotalScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_total"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/button_chocolate"
        android:padding="12dp"
        android:text="@string/btn_reset"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        app:cornerRadius="10dp"/>

</LinearLayout>