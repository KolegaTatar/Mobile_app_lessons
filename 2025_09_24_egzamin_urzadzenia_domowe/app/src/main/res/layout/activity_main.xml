<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/main_color"
    android:orientation="vertical">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/main_label"
       android:gravity="center_horizontal"
       android:id="@+id/main_label"
       android:textSize="32dp"
       android:layout_margin="5dp"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/author"
       android:gravity="center_horizontal"
       android:id="@+id/author"
       android:textSize="16dp"
       android:layout_margin="5dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <ImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:background="@drawable/pralka"
          android:id="@+id/pralka"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="20dp"
          android:layout_marginTop="0dp"
         />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/device_1"
             android:id="@+id/pralka_text"
             android:textSize="24dp" />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Podaj nr prania 1..12"
             android:inputType="number"
             android:background="@color/input_color"
             android:textColor="@color/write_text_color"
             android:id="@+id/input_device_1"
             android:textColorHint="@color/write_text_color"/>

         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:backgroundTint="@color/btn_color"
             android:text="@string/btn_device_1"
             android:layout_margin="10dp"
             android:id="@+id/btn_device_1"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Numer prania: nie podano"
             android:id="@+id/under_text_pralka"
             android:textSize="16dp"
             android:layout_margin="5dp"/>
      </LinearLayout>
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <ImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:background="@drawable/odkurzacz"
          android:id="@+id/odkurzacz"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="20dp"
          android:layout_marginTop="0dp"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/device_2"
             android:id="@+id/odkurzacz_text"
             android:textSize="24dp"/>
         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:backgroundTint="@color/btn_color"
             android:text="@string/btn_device_2"
             android:layout_margin="10dp"
             android:id="@+id/btn_device_2"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Odkurzacz wyłączony"
             android:id="@+id/under_text_odkurzacz"
             android:textSize="16dp"
             android:layout_margin="5dp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Status: naładowany"
             android:id="@+id/ststus"
             android:textSize="16dp"
             android:layout_margin="5dp"/>
      </LinearLayout>
   </LinearLayout>


</LinearLayout>